<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rosbot">

  <xacro:include filename="include.xacro" />

  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="chasis"/>
    <origin xyz="0 0 0.19" />
  </joint>

  <!--Chasis-->
  <link name="chasis">
    <visual>
      <geometry>
        <mesh filename="package://rosbot/meshes/box.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin xyz="-0.381 0.2 -0.075" rpy = "1.57 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="-0.381 0.2 -0.075" rpy = "1.57 0 0"/>
      <geometry>
        <mesh filename="package://rosbot/meshes/box.STL" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="-0.381 0.2 -0.075" rpy = "1.57 0 0"/>
      <mass value="30"/>
      <inertia  ixx="456250.0" ixy="0" ixz="0" iyy="1844000.0" iyz="0" izz="1500250.0" />
    </inertial>
    
  </link>

  <!--Right-->
  
  <link name="right_wheel">
    <visual>
      <geometry>
         <cylinder length="0.08" radius="0.12"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.08" radius="0.12"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="1.0" length="0.08" radius="0.12">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <joint name="joint_right_rear_wheel" type="continuous">
    <parent link="chasis"/>
    <child link="right_wheel"/>
    <origin xyz="-0.27 -0.295 -0.07" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

 <!--Left -->

  <link name="left_wheel">
    <visual>
      <geometry>
         <cylinder length="0.08" radius="0.12"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.08" radius="0.12"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="1.0" length="0.08" radius="0.12">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <joint name="joint_left_rear_wheel" type="continuous">
    <parent link="chasis"/>
    <child link="left_wheel"/>
    <origin xyz="-0.27 0.295 -0.07" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="master">
    <visual>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.181" x="0.1" y="0.1" z="0.2">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>
  <joint name="master_joint" type="revolute">
    <parent link="chasis"/>
    <child link="master"/>
    <origin xyz="0.24 0 0" rpy= "1.57 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="1" lower="-0.78" upper="0.78"/>
  </joint>

  <link name="right_wheel_front_assembly">
    <visual>
      <geometry>
         <cylinder length="0.001" radius="0.04"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="white"/>
    </visual>
    <xacro:inertial_cylinder mass="1.0" length="0.001" radius="0.04">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <link name="right_wheel_front">
    <visual>
      <geometry>
         <cylinder length="0.08" radius="0.12"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.08" radius="0.12"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="1.0" length="0.08" radius="0.12">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <joint name="joint_right_wheel_front" type="revolute">
    <parent link="chasis"/>
    <child link="right_wheel_front_assembly"/>
    <origin xyz="0.27 -0.295 -0.07" rpy="1.57 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="1" lower="-0.78" upper="0.78"/>
    <mimic joint="master_joint" multiplier="1.0" offset="0"/>
  </joint>
  <joint name="right_wheel_joint" type="continuous">
    <parent link="right_wheel_front_assembly"/>
    <child link="right_wheel_front"/>
    <origin xyz="0.0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="100" velocity="1"/>
  </joint>

  <link name="left_wheel_front_assembly">
      <visual>
      <geometry>
         <cylinder length="0.001" radius="0.04"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="white"/>
    </visual>
    <xacro:inertial_cylinder mass="1.0" length="0.001" radius="0.04">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>
  <link name="left_wheel_front">
    <visual>
      <geometry>
         <cylinder length="0.08" radius="0.12"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.08" radius="0.12"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="1.0" length="0.08" radius="0.12">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <joint name="joint_left_wheel_front" type="revolute">
    <parent link="chasis"/>
    <child link="left_wheel_front_assembly"/>
    <origin xyz="0.27 0.295 -0.07" rpy="1.57 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="1" lower="-0.78" upper="0.78"/>
    <mimic joint="master_joint" multiplier="1.0" offset="0"/>
  </joint>
    <joint name="left_wheel_joint" type="continuous">
    <parent link="left_wheel_front_assembly"/>
    <child link="left_wheel_front"/>
    <origin xyz="0.0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="100" velocity="1"/>
  </joint>

  <!--camara-->

  <link name="camera_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 -0.156 0"/>
      <geometry>
        <box size="0.04 0.17 0.03"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 -0.156 0"/>
      <geometry>
        <box size="0.04 0.17 0.03"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.181" x="0.04" y="0.17" z="0.03">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>
  
  <joint name="camera_joint" type="fixed">
    <parent link="chasis"/>
    <child link="camera_link"/>
    <origin xyz=" 0.30 0 0.1" rpy="0 -0.156 0"/>
  </joint>

  <link name="camera_depth_frame"/>

  <joint name="camera_depth_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="camera_link"/>
    <child link="camera_depth_frame"/>
  </joint>

  <!--lidar-->

  <link name="lidar_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.125"/>
      <inertia ixx="0.001"  ixy="0"  ixz="0" iyy="0.001" iyz="0" izz="0.001" />
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
         <cylinder radius="0.05" length="0.05"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
         <cylinder radius="0.05" length="0.09"/>
      </geometry>
    </visual>
  </link>
     
  <joint name="lidar_joint" type="fixed">
    <parent link="chasis"/>
    <child link="lidar_link"/>
    <origin xyz=" 0.2 0 0.15" rpy="0 0 0"/>
  </joint>
     
  <xacro:include filename="gazebo.xacro"/>

</robot>